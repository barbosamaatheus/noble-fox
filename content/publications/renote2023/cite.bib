@article{Gonçalves de Almeida_Vinicius Ferreira_Dantas de Souza Rebuças_Barbosa de Oliveira_Medeiros_2023, place={Porto Alegre}, title={Avaliando Aplicativos Baseados na Computação Desplugada em Sala de Aula: Um Relato de Experiência }, volume={20}, url={https://seer.ufrgs.br/index.php/renote/article/view/129171}, DOI={10.22456/1679-1916.129171}, abstractNote={&amp;lt;p&amp;gt;Tem surgido uma forte demanda por recursos tecnológicos que tornem mais interessante o ensino-aprendizagem em diversas áreas, inclusive na computação. Considerando este contexto, o projeto Computação Plugada, em que se insere este trabalho, tem como objetivo desenvolver e avaliar aplicativos para apoiar o ensino da Ciência da Computação construídos com base em atividades da computação desplugada, como as do livro de Bell, Witten e Fellows. Neste artigo são descritas experiências deste projeto ao utilizar em salas de aula dois destes aplicativos e as lições aprendidas. Também são descritos os resultados da avaliação destes aplicativos junto aos estudantes por meio de questionários online onde se percebeu uma boa aceitação e foram coletadas sugestões de melhorias para os apps que irão apoiar sua evolução e utilização mais ampla.&amp;lt;/p&amp;gt;}, number={2}, journal={RENOTE}, author={Gonçalves de Almeida, Sabrina and Vinicius Ferreira, Marcos and Dantas de Souza Rebuças, Ayla Débora and Barbosa de Oliveira, Matheus and Medeiros, Emanoel}, year={2023}, month={jan.}, pages={206–216} }